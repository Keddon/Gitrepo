var favoriteFruits = ["Apples", "Bananas", "Plums", "Oranges", "Grapes"];

var fruitCounter = 1;
var continueNextfruit = true;
var continuePreviousfruit = false;





var nextFruit = function(){
		if(continueNextfruit === false){
		continuePreviousfruit = true;
	}else
		textLabelmain.text = favoriteFruits[Number(fruitCounter)];
		fruitCounter++;
		if(fruitCounter <= 3){
			continueNextfruit = true;
		}else
				continueNextfruit = false;


};

var previousFruit = function(){
	if(continuePreviousfruit = false){
		continueNextfruit = true;
	}else
		fruitCounter--;
		textLabelmain.text = favoriteFruits[Number(fruitCounter)];
		if(fruitCounter >=1){
			continuePreviousfruit = false;
		}else
		continuePreviousfruit = true;
};

nextButton.addEventListener("click", nextFruit);



previousButton.addEventListener("click", previousFruit);
