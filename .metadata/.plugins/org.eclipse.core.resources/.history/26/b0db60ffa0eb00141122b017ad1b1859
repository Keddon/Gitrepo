var apploader = require("app");
var deviceWth = Ti.Platform.displayCaps.platformWith;
var deviceHgt = Ti.Platform.displayCaps.platformHeight;
var itemCount = 30;
var itemRow = 4;
var margin = 10;
var canvasWth = (margin*itemRow);
var itemsize = (canvasWth/itemRow);

for (var i=0; i<itemCount; i++){
	var viewer = Ti.UI.createView({
		backgroundColor: "fff",
		top: margin,
		left: margin,
		width: itemsize,
		height: itemsize,
	});
	var text = Ti.UI.createLabel({
		text: i+1,
		color: "fff",
	});
	viewer.add(text);
	GalleryWindow.add(viewer);
}

var galleryActivity = Ti.UI.createView({
	
});
